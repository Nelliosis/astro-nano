---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf(),
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  }),
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hi, I'm Junel.
    </h4>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I am primarily a DevOps guy, occasionally the backend developer,
            sometimes the blockchain developer, and at times a lead developer
            assisting my team in solving big problems.
          </p>
          <p class="animate">
            I absolutely love automation, efficient and scalable infrastructure
            and streamlined operations. I am always learning about them.
            Recently though, I started learning more about security.
          </p>

          <p class="animate">
            At work, I use the full might of AWS and GCP to empower our team and
            product. At home, I use the full might of my spare 10 year old
            laptop (and maybe the free tier of Firebase) to engage in fun side
            projects for me and my friends.
          </p>
          <p class="animate">
            This is a place for me to yap about stuff. Welcome. Have a look
            around my blog if you'd like to learn something. Or perhaps check
            out my (almost non existent) home projects.
          </p>
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/blog"> See all posts </Link>
        </div>
        <p class="text-sm opacity-75">UNDER CONSTRUCTION</p>
